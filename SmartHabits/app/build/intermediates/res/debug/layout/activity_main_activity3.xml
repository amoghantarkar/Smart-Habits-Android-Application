<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="smarthabitsnew.aditya.example.com.smarthabitsnew.MainActivity3"
    >

    <CalendarView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/calendarView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/calendarView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the name of the event"
        android:id="@+id/et1"
        android:layout_below="@+id/calendarView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter details"
        android:id="@+id/et2"
        android:layout_below="@+id/et1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter difficulty level in the range 1-5"
        android:id="@+id/et3"
        android:layout_below="@+id/et2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Approximate time for completion"
        android:id="@+id/et4"
        android:layout_below="@+id/et3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button5"
        android:layout_below="@+id/et4"
        android:layout_alignParentStart="true" />


</RelativeLayout>
